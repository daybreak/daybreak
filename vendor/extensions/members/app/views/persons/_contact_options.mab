@contact_types = ContactType.find(:all)
@person = person
table.contact_options! do
  tr {th "Type"; th "Info"; th "Primary?"}
  person.contact_options.each_with_index do |contact_option, index|
    render :partial => '/persons/contact_option', :locals => { :contact_option => contact_option, :index => index }
  end
end
render :partial => '/persons/add_contact_option_link', :locals => { :index => person.contact_options.size }

